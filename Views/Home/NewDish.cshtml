@model DishView;


<h1>Add a Dish</h1>
<p><a href="/">Home</a></p>

<form asp-action="AddDish" asp-controller="Home" method="post">
    <Label>
        Name
        <span asp-validation-for="Name"></span>
        <input asp-for="Name">
    </Label>
    <Label>
        Calories
        <span asp-validation-for="Calories"></span>
        <input asp-for="Calories">
    </Label>
    <Label>
        Chef
        <span asp-validation-for="ChefId"></span>
        <select asp-for="ChefId">
            @{
                foreach(Chef i in @Model.ListofChefs)
                {
                    <option value="@i.Id">@i.Name</option>
                }
             }
        </select>
    </Label>
    <Label>
        Tastiness
        <span asp-validation-for="Tastiness"></span>
        <select asp-for="Tastiness">
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
            <option value=5>5</option>
        </select>
    </Label>
    <button>Submit</button>
</form>
